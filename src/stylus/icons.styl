.selected .tags a {
	background: transparent;
	border: none;
	color: #ffffff;
	margin-top: 8px;
	font-weight: bold;
	text-shadow: none;
	filter: none;
	text-shadow: 0 -1px 0 #3d8d11;
	filter: dropshadow(#3d8d11,0,-1);
}

.tags a:hover .close {
	display: inline-block;
	border-left: solid 1px;
	margin-left: 6px;
	padding-left: 6px;
	padding-right: 6px;
	margin-top: 1px;
	height: 15px;
	line-height: 14px;
	cursor: pointer;
	_cursor: hand;
}
.tags a .close {
	display: none;
}


 








