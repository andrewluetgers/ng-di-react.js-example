	background-position: -188px -1px;
}

// tag input for dedtail views
#tagDetailPicker .picker .tag>.ico {
	background-position: -189px -7px;
}


/* --------- tag badges ---------*/

.tags {
	white-space: nowrap;

	bottom: 4px;
	overflow: hidden;
}

.tags a {
	display: block;
	height: 18px;
	line-height: 18px;
	color: #ffffff;
	font-size: 13px;
	font-weight: bold;
	padding: 0 6px 1px 6px;
	margin: 6px 3px 4px 0;
	float: left;
	border: solid 1px;
	border-color: rgba(0,0,0,0.07);
	-webkit-border-radius: 4px;
	border-radius: 4px;
}

.tags a:hover,
.tags a:focus {
	opacity: 1;
	padding-right: 0;
}

#filters .tag>.ico {
//	background-image: none
