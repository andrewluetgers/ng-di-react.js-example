	background-position: -46px -3px;
}

#searchOpts .ico {
	background-position: -84px -3px;
}

#accountInfo .ico {
	background-position: -124px 0;
}

input.newTag,
body .tag>.ico {
	background-position: -156px -1px;
	background-image: url("../assets/img/header-icons.png");
}
