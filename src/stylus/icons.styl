/* --------- icons ---------*/

.ico {
	display: block;
	background-image: url("../assets/img/row-icons.png");
	background-repeat: no-repeat;
	width: 32px;
	height: 32px;
	overflow: hidden;
	/*background-color: blue;*/
}

/* --------- row icons ---------*/
.blank > .ico {					background-position: 0 32px;}

.client > .ico {				background-position: 0 0;}
.selected.client > .ico {		background-position: -32px 0;}

.project > .ico {				background-position: 0 -35px;}
.selected .project > .ico {		background-position: -32px -35px;}

.workflow > .ico {
	background-position: 0 -68px;
}
.selected .workflow > .ico {
	background-position: -32px -68px;
}


.job > .ico {					background-position: 0 -100px;}
.selected .job > .ico {			background-position: -32px -100px;}

.jobRun > .ico {				background-position: 0 -134px;}
.selected .jobRun > .ico {		background-position: -32px -134px;}

.workflowRun > .ico {			background-position: 0 -167px;}
.selected .workflowRun > .ico {	background-position: -32px -167px;}

.results > .ico {				background-position: 0 -200px;}
.selected .results > .ico {		background-position: -32px -200px;}

.file > .ico,
.sharedFile > .ico,
.projectFile > .ico {
	background-position: 0 -233px;
}
.selected .file > .ico,
.selected .sharedFile > .ico,
.selected .projectFile > .ico {
	background-position: -32px -233px;
}

.check>.ico {					background-position: 0 -265px;}
.selected .check>.ico {			background-position: -32px -265px;}


.loading .ico {
  opacity: .3;
}


/* --------- header icons ---------*/

